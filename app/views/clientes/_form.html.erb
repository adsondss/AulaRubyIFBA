
<%= form_with(model: cliente) do |form| %>
  <% if cliente.errors.any? %>
 
        <% cliente.errors.each do |error| %>
          <div class="alert alert-danger" role="alert"> <%= error.full_message %> </div>
        <% end %>
      
    
  <% end %>


   

  <div class="form-group">
    <%= form.label :nome, style: "display: block" %>
    <%= form.text_field :nome , class:"form-control " %>
  </div>

  <div class="form-group">
    <%= form.label :cpf, style: "display: block" %>
    <%= form.text_field :cpf , class:"form-control", id: 'cpf'%>
  </div>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email , class:"form-control"%>
  </div>
  
  <div>
    <%= form.label :nascimento, style: "display: block" %>
    <%= form.date_field :nascimento , class:"form-control"%>
  </div>

  <div>
    <%= form.label :telefone, style: "display: block" %>
    <%= form.text_field :telefone , class:"form-control", id: 'telefone'%>
    
  </div>
  
  <div>
    <%= form.label :endereco, style: "display: block" %>
    <%= form.text_field :endereco , class:"form-control"%>
  </div>

  <div>
    <%= form.label :rg, style: "display: block" %>
    <%= form.text_field :rg , class:"form-control"%>
  </div>

  <div class="form-group">
  <%= form.label :sexo, style: "display: block" %>
  <%= form.select :sexo, ["Masculino", "Feminino"] , {:class => 'grouped_select',id:"location_grouped"} ,class:"form-control"%>
  </div>
<br>
  <div class="btn-group" role="group">
    <%= link_to "Voltar", clientes_path, class:"btn btn-secondary btn-lg" %>
    <%= form.submit class:"btn btn-primary btn-lg"%>
  </div>
<% end %>

